<h1>The Scallywag</h1>

<div class="pirate">
	<h2>Name: <%= @pirate.name %> </h2>
	<h3>Weight: <%= @pirate.weight %> </h3>
	<h3>Height: <%= @pirate. 	height %> </h3>
</div><br>


<h2>Boaty Boats</h2>
<% @ships.each do |ship| %>

<div class="ships">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <br>
</div>

<% end %>


